<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebRequestsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="243dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/internet" />

    <EditText
        android:id="@+id/web_resp_text"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="text"
        android:singleLine="false"
        android:text="Web request response text"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/web_get_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Perform GET Request"
        app:layout_constraintEnd_toEndOf="@+id/web_resp_text"
        app:layout_constraintStart_toStartOf="@+id/web_resp_text"
        app:layout_constraintTop_toBottomOf="@+id/web_resp_text" />

    <Button
        android:id="@+id/examples_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="More Examples"
        app:layout_constraintEnd_toEndOf="@+id/web_resp_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/web_resp_text"
        app:layout_constraintTop_toBottomOf="@+id/web_get_button" />
</androidx.constraintlayout.widget.ConstraintLayout>